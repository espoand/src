  <children>
    <MenuBar VBox.vgrow="NEVER">
         <menus>
            <Menu mnemonicParsing="false" text="File">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#quit" text="Quit" />
              </items>
            </Menu>
         </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
         <children>
            <TextField id="username" fx:id="username" layoutX="237.0" layoutY="103.0" text="USERNAME" />
            <TextField id="password" fx:id="password" layoutX="237.0" layoutY="172.0" text="PASSWORD" />
            <Button id="loginButton" fx:id="submit" layoutX="300.0" layoutY="252.0" mnemonicParsing="false" onAction="#submitLogin" text="Login" />
            <Text layoutX="209.0" layoutY="57.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Benvenuto in CarLoan! Effettua il login" />
         </children>
    </AnchorPane>
  </children>
